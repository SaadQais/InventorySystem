@model DirectEntryViewModel
@using InventorySystem.Application.Features.DirectEntries.Models;
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-6">
                        <h3 class="card-title ">تفاصيل الأدخال المباشر</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <div class="p-4  border rounded">
                    <input type="hidden" asp-for="Id" />

                    <div class="col-8">
                        
                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Type"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Type" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Warehouse.Name"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Warehouse.Name" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Description"></label>
                            </div>
                            <div class="col-6">
                                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="col-1">

                    </div>

                    <div class="col-3">

                    </div>

                    <hr />

                    <div class="form-group text-left">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>
                        <a asp-action="Index" class="btn btn-default">العوده الى القائمة</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
