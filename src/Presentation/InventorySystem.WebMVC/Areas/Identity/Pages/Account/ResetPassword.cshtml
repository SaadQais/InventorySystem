@page

@using InventorySystem.WebMVC.Areas.Identity.Pages.Account;
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="row">
    <div class=" col-10">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="card-title ">أعاده تعيين كلمه المرور</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <div class="table-responsive">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input asp-for="Input.Token" type="hidden" />
                        <input asp-for="Input.Email" type="hidden" />
                        <input type="hidden" name="userId" value="@ViewData["UserId"]" />
						
                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Input.Email"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Input.Password"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Input.ConfirmPassword"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
						
                        <div class="form-group">
                            @*<div class="col-12">
                            <a asp-area="Identity" asp-page="/Account/ForgotPassword">
                            Forget Password
                            </a>
                            </div>*@
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary pull-right">أعاده التعيين</button>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
