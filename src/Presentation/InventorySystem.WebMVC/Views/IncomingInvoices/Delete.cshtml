@model InventorySystem.Application.Features.Products.Queries.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-12 text-right">
                        <h3 class="card-title ">حذف ماده</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Delete">
                    <div class="p-4  border rounded">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Name"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Name" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Code"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Code" disabled class="form-control" />
                            </div>
                        </div>

						<div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Barcode"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Barcode" disabled class="form-control" />
                            </div>
                        </div>

						<div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="SerialNumber"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="SerialNumber" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Type"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Type" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="UOM"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="UOM" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Description"></label>
                            </div>
                            <div class="col-6">
                                <textarea asp-for="Description" rows="3" disabled class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-default" value="حذف" />
                            <a asp-action="Index" class="btn btn-danger">العوده الى القائمة</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

