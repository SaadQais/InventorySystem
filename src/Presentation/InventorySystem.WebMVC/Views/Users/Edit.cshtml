@model InventorySystem.Application.Models.User.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-12 text-right">
                        <h3 class="card-title ">تحديث معلومات المستخدم</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <div class="p-4 border rounded">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="UserName"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="PhoneNumber"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Email"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Email" readonly class="form-control" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="UserRole"></label>
                            </div>
                            <div class="col-6">
                                <select asp-for="UserRole" class="form-control" asp-items="(SelectList)@ViewData["Roles"]">
                                </select>
                            </div>
                        </div>

                        <hr />

                        <div class="form-group text-left">
                            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="تحديث" />
                            <a asp-area="Identity" asp-page="/Account/ResetPassword" asp-route-userId="@Model.Id" class="btn btn-info pull-right">اعادة تعيين كلمة المرور</a>
                            <a asp-action="Index" class="btn btn-default">العوده الى القائمة</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

