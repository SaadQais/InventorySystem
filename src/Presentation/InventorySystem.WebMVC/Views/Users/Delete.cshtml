@model InventorySystem.Application.Models.User.UserViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="row">
                    <div class="col-12 text-right">
                        <h3 class="card-title ">حذف المستخدم</h3>
                    </div>
                </div>
                <br />
            </div>
            <br />
            <div class="card-body">
                <form method="post" asp-action="Delete">
                    <div class="p-4  border rounded">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="UserName"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="UserName" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="PhoneNumber"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="PhoneNumber" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="Email"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="Email" disabled class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-3 text-right">
                                <label asp-for="UserRole"></label>
                            </div>
                            <div class="col-6">
                                <input asp-for="UserRole" disabled class="form-control" />
                            </div>
                        </div>

                        <hr />

                        <div class="form-group text-left">
                            <input type="submit" class="btn btn-danger" value="حذف" />
                            <a asp-action="Index" class="btn btn-default">العوده الى القائمة</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

